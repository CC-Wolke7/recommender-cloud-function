# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
max_line_length = 0
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
