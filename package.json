{
  "name": "recommender-cloud-function",
  "version": "1.0.0",
  "author": "Savina Diez",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "functions-framework --source=build/ --target=recommend --signature-type=event",
    "watch": "concurrently \"tsc -p tsconfig.json -w\" \"nodemon --watch ./build/ --exec npm run start\"",
    "fix:lint": "eslint --fix '{src,test}/**/*.ts'",
    "fix:format": "prettier --write ."
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "mysql": "^2.18.1",
    "qs": "^6.9.6"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "@types/express": "^4.17.11",
    "@types/mysql": "^2.15.17",
    "@types/qs": "^6.9.5",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write",
    "src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  }
}
